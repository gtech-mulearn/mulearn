{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // fix 85 bugs, then remove this comments
    // "noUncheckedIndexedAccess": true, 
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/MuLearnComponents/*": ["src/components/MuComponents/*"],
      "@/AnimatedComponents/*": ["src/components/animations/*"],
      "@/MuLearnServices/*": ["src/services/*"],
}
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  // "exclude": ["node_modules"]
}
